<root>
    <Properties>
    	<!--邮件的类型，0:文字邮件，1：id邮件-->
    	<mail_type>
    		<Type>INT32</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
    	</mail_type>
        <!--邮件头-->
        <title>
            <Type>STRING</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </title>
        <!--邮件称呼-->
        <name> 
            <Type>STRING</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </name>
        <!--邮件文字内容-->
        <text> 
            <Type>STRING</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </text>
        <!--发邮件人-->
        <from> 
            <Type>STRING</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </from>
        <!--邮件时间-->
        <time> 
            <Type>INT32</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </time>
        <!--邮件过期时间-->
        <timeout> 
            <Type>INT32</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </timeout>
        <!--附件-->
        <attachment> 
            <Type>LUA_TABLE</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </attachment>
        <!--邮件的来源,对应reason_def-->
        <reason>
        	<Type>INT32</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </reason>
        <!--邮件状态-->
        <state>
        	<Type>INT8</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </state>
        <!--扩展信息-->
        <extern_info>
        	<Type>LUA_TABLE</Type>
            <Flags>BASE</Flags> 
            <Persistent>TRUE</Persistent>
        </extern_info>
    </Properties>

    
</root>